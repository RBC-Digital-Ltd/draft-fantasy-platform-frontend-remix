{
  "name": "draft-fantasy-platform-frontend-remix",
  "private": true,
  "sideEffects": false,
  "scripts": {
    "build": "run-s \"build:*\"",
    "build:css": "yarn generate:css -- --minify",
    "build:remix": "remix build",
    "old-dev": "run-p \"dev:*\"",
    "dev:css": "npm run generate:css -- --watch",
    "dev:remix": "remix dev",
    "dev": "npm run generate:css & npm run dev:css & npm run dev:remix",
    "generate:css": "npx tailwindcss -i ./styles/app.css -o ./app/tailwind.css",
    "start": "remix-serve build",
    "==========TEST===========": "",
    "typecheck": "tsc -b",
    "format": "prettier --write .",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
    "test": "jest",
    "==========RELEASE===========": "",
    "release": "release-it",
    "prepare": "husky install",
    "==========STORYBOOK===========": "",
    "storybook": "run-s \"watch:storybook\" \"dev:css\"",
    "watch:storybook": "start-storybook -p 6006",
    "build:storybook": "build-storybook"
  },
  "dependencies": {
    "@remix-run/node": "^1.15.0",
    "@remix-run/react": "^1.15.0",
    "@remix-run/serve": "^1.15.0",
    "@remix-run/server-runtime": "^1.14.0",
    "isbot": "^3.6.8",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "remix-auth": "^3.4.0",
    "remix-auth-auth0": "^1.7.0"
  },
  "devDependencies": {
    "@babel/core": "^7.21.4",
    "@playwright/test": "^1.32.3",
    "@remix-run/dev": "^1.14.3",
    "@remix-run/eslint-config": "^1.15.0",
    "@storybook/addon-actions": "^6.5.16",
    "@storybook/addon-essentials": "^6.5.16",
    "@storybook/addon-interactions": "^6.5.16",
    "@storybook/addon-links": "^6.5.16",
    "@storybook/builder-webpack5": "^6.5.16",
    "@storybook/manager-webpack5": "^6.5.16",
    "@storybook/react": "^6.5.16",
    "@storybook/testing-library": "^0.0.13",
    "@tailwindcss/forms": "^0.5.3",
    "@tailwindcss/typography": "^0.5.9",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@types/jest": "^29.5.0",
    "@types/react": "^18.0.31",
    "@types/react-dom": "^18.0.11",
    "auto-changelog": "^2.4.0",
    "autoprefixer": "^10.4.14",
    "babel-loader": "^9.1.2",
    "eslint": "^8.44.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-storybook": "^0.6.11",
    "husky": ">=8",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "lint-staged": ">=13.2.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.21",
    "prettier": "^2.8.7",
    "release-it": "^15.10.0",
    "tailwindcss": "^3.3.1",
    "ts-jest": "^29.1.0",
    "typescript": "^4.9.5"
  },
  "engines": {
    "node": ">=14"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": "eslint --cache --fix",
    "*.{ts,tsx,js,jsx,css,md}": "prettier --write"
  },
  "version": "0.0.11"
}
